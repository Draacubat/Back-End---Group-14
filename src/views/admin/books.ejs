<div class="container">
    <h1>Manage Books</h1>

    <a href="/admin/books/new" class="btn btn-success mb-3">
        âž• Add New Book
    </a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Available</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>

                    <td>
                        <%= book.name.first %> <%= book.name.last %>
                    </td>

                    <td>
                        <%= book.available ? "Yes" : "No" %>
                    </td>

                    <td>
                        <a href="/admin/books/<%= book._id %>/edit"
                           class="btn btn-sm btn-primary">
                           Edit
                        </a>

                        <form
                          action="/admin/books/<%= book._id %>/delete"
                          method="POST"
                          style="display:inline;"
                        >
                            <button
                              type="submit"
                              class="btn btn-sm btn-danger"
                              onclick="return confirm('Delete this book?')"
                            >
                              Delete
                            </button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

